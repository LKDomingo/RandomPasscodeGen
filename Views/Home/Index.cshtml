@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center p-5">
    @{
        if (@Context.Session.GetInt32("Count") == null)
        {
            <h4 class="display-4">Random passcode Generator</h4>
        }
        else
        {
            <h4 class="display-4">Random passcode (passcode #@Context.Session.GetInt32("Count"))</h4>
        }
    }
    <div style="" class="m-5">
        <div class="d-flex justify-content-center">
            <p style="border: 3px solid black;" class="display-6 px-3 py-1 mb-3">@Context.Session.GetString("Passcode")</p>
        </div>
    </div>
    <div><a class="btn btn-primary mb-2" href="/generate">Generate</a></div>
    <div><a class="btn btn-danger" href="/clear">Clear Session</a></div>


</div>
